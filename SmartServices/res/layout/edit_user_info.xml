<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/li"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dip"
        android:layout_marginTop="10.0dip"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginLeft="10.0dip"
            android:src="@drawable/reg" />

        <TextView
            android:id="@+id/udpateProfileTV"
            style="@android:style/TextAppearance.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Profile"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/phoneNumberUpd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:gravity="center"
                android:hint="* Mobile Number"
                android:padding="10dip"
                android:singleLine="true"
                android:textSize="18sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.25dip"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/nameUpd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:gravity="center"
                android:hint="* Name"
                android:inputType="text"
                android:padding="10dip"
                android:singleLine="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.25dip"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/eMailUpd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:gravity="center"
                android:hint="* E-Mail"
                android:inputType="textEmailAddress"
                android:padding="10dip"
                android:singleLine="true" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.25dip"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/addressETUpd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffffff"
                android:gravity="center"
                android:hint="Address"
                android:padding="10dip"
                android:singleLine="true" />

            <TextView
                android:id="@+id/errorTxtUpt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:gravity="center"
                android:textColor="#ff669900"
                android:textStyle="bold" />

            <Button
                android:id="@+id/saveUpt"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:background="@drawable/grn_btn"
                android:onClick="signUp"
                android:padding="7.0dip"
                android:singleLine="true"
                android:text="Save"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>